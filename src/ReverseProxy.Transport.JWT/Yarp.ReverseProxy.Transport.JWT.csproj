  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer">
      <Version>8.0.10</Version>
    </PackageReference>
  </ItemGroup>
  -->

</Project>
