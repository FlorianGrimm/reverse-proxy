{
  "Comment": "The tunnel front end",
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "routeFERoot": {
        "ClusterId": "alpha",
        "Match": {
          "Path": "{**catch-all}"
        }
      },
      "routeFEBeta": {
        "ClusterId": "beta",
        "Match": {
          "Path": "/beta/{**catch-all}"
        }
      },
      "routeFEExample": {
        "ClusterId": "gamma",
        "Match": {
          "Path": "/example"
        }
      }
    },
    "Clusters": {
      "alpha": {
        "Transport": "TunnelHTTP2",
        "Authentication": {
          "Mode": "ClientCertificate",
          "ClientCertificate": "ClientCertificate"
        }
      },
      "gamma": {
        "Destinations": {
          "beta/destination1": {
            "Address": "https://example.com/"
          }
        },
        "Transport": "Forwarder"
      }
    },
    "AuthenticationCertificate": {

    }
  },
  "CertificateManager": {
    "AllowSelfSigned": true,
    "RevocationMode": "NoCheck",
    "VerificationFlags": "IgnoreRootRevocationUnknown",
    "Certificates": {
      "ClientCertificate": [
        {
          "Subject": "CN = yarp-client-localhost-2023"
        },
        {
          "Subject": "CN = yarp-client-localhost-2024"
        },
        {
          "Subject": "CN = yarp-client-localhost-2025"
        },
        {
          "Subject": "CN = yarp-client-localhost-2026"
        }
      ]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
