    <UserSecretsId>ReverseProxy</UserSecretsId>
    <MicrosoftIdentityClient>4.63.0</MicrosoftIdentityClient>
    <MicrosoftIdentityClientMsal>4.63.0</MicrosoftIdentityClientMsal>
